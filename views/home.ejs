<%- include("partials/header") -%>

    <h1>Home</h1>
    <p>
        <%= homeContent %>
    </p>
    <a class="" href="/compose"> <button class="btn btn-default newBtn " type="button">Add New </button></a>

    <% posts.forEach(function(post){ %>
        <h2>
            <%= post.postTitle %>
        </h2>
        <p>
            <% if(post.postContent.length>100){ %>
                <%= post.postContent.substring(0,100)+" ..." %>
                <a href="/posts/<%= post.postTitle %>">Read More</a>
            <% }else{ %>
                <%= post.postContent %>
            <% } %>
        </p>
        <% }) %>

            <%- include("partials/footer") -%>